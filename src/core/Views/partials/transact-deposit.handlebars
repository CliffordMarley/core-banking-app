   .deposit_fields {
      width: 100px !important;
      padding: 0;
      margin: 0;
      border-radius: 5px/5px !important;
      padding:0 !important;
   }

   table tbody tr,
   table tbody tr th {
      width: 50px !important;
      padding-top: 0 !important;
      padding-bottom: 0 !important;
      padding-left: 10px !important;
   }
   table tbody tr td{
      font-family: roboto !important;
   }
</style>